pipeline {
    agent any

    environment {
        PYTHON = 'python3'
    }

    stages {

        stage('Checkout') {
            steps {
                git(
                    url: 'https://github.com/<your-username>/alx-backend-python.git',
                    branch: 'main',
                    credentialsId: 'github-credentials'
                )
            }
        }

        stage('Set up Python Environment') {
            steps {
                script {
                    // Using ShiningPanda plugin for Python virtualenv
                    withPythonEnv('python3') {
                        sh 'pip install --upgrade pip'
                        sh 'pip install -r messaging_app/requirements.txt'
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    sh 'pytest messaging_app/tests/ --junitxml=report.xml --maxfail=1 --disable-warnings -q'
                }
            }
            post {
                always {
                    junit 'report.xml'
                }
            }
        }
    }

    triggers {
        // Manual trigger for now (no automatic Git triggers)
    }
}
